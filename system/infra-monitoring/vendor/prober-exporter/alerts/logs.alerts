groups:
  - name: OpenSearchLogs
    rules:
      - alert: OpenSearchDashboardDown
        expr: probe_success{target=~"https://logs.+"} == 0
        for: 15m
        labels:
          severity: info
          tier: os
          service: logging
          meta: "OpenSearch logs dashboard down"
          dashboard: opensearch-logshipping
          playbook: docs/support/playbook/opensearch_issues
        annotations:
          description: "OpenSearchLogs dashboard is down"
          summary: "OpenSearchLogs dashboard is down"

      - alert:OpenSearchClientEndpointDown
        expr: probe_success{target=~"https://opensearch-logs-client.+"} == 0
        for: 15m
        labels:
          severity: info
          tier: os
          service: logging
          meta: "OpenSearch-Logs cluster down"
          dashboard:opensearch-logshipping
          playbook: docs/support/playbook/opensearch_issues
        annotations:
          description: "OpenSearch Logs client is down"
          summary: "OpenSearch Logs client is down"

